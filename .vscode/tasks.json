        },
        {
            "label": "Format Source Files",
            "type": "shell",
            "command": "${workspaceRoot}/SC.sh",
            "args": [
                "format",
                "execute"
            ],
            "windows": {
                "command": "${workspaceRoot}/SC.bat",
            },
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "label": "Generate Projects",
            "type": "shell",
            "command": "${workspaceRoot}/SC.sh",
            "args": [
                "build",
                "configure"
            ],
            "windows": {
                "command": "${workspaceRoot}/SC.bat",
