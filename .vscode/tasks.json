{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SCTest Debug",
            "type": "shell",
            "osx": {
                "command": "make -j`sysctl -n hw.physicalcpu` -C _Build/Projects/Make",
            },
            "linux": {
                "command": "make -j`nproc` -C _Build/Projects/Make"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build SCTest Release",
            "type": "shell",
            "osx": {
                "command": "make -j`sysctl -n hw.physicalcpu` -C _Build/Projects/Make CONFIG=Release",
            },
            "linux": {
                "command": "make -j`nproc` -C _Build/Projects/Make CONFIG=Release"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": {
                "kind": "build",
            }
        },
        {
            "label": "Build SCTest XCode Debug",
            "type": "shell",
            // Building scheme for DEBUG (will use settings set in the scheme, ASAN for example)
            // Building only a single arch because, USE_ACTIVE_ARCS is ignored when invoked from xcodebuild
            "command": "xcodebuild -scheme SCTest -configuration Debug -project \"${workspaceFolder}/_Build/Projects/XCode/SCTest.xcodeproj\"",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": {
                "kind": "build",
            }
        },
        {
            "label": "Build SCTest XCode Release",
            "type": "shell",
            // We cannot use "archive" action as produces a broken symlink instead of proper executable (BUG)
            // If you want to build only 1 arch add ONLY_ACTIVE_ARCH=NO AND (ARCHS=arm64 or ARCHS=x86_64)
            "command": "xcodebuild -target SCTest -configuration Release -project \"${workspaceFolder}/_Build/Projects/XCode/SCTest.xcodeproj\"",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
            }
        },
        {
            "label": "Build SCTest XCode Release ARM64",
            "type": "shell",
            "command": "xcodebuild -target SCTest -configuration Release -project \"${workspaceFolder}/_Build/Projects/XCode/SCTest.xcodeproj\" ONLY_ACTIVE_ARCH=NO ARCHS=arm64",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
            }
        },
    ]
}