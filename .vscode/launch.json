    "version": "0.2.0",
    "configurations": [
        {
            "name": "SCTest x64 [win] (vsdbg)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/_Build/Output/Windows-10.0-x64-msvc2022-Debug/SCTest.exe",
            "preLaunchTask": "Build SCTest Debug",
            "args": [],
            "stopAtEntry": false,
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "SCTest ARM64 [win] (vsdbg)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/_Build/Output/Windows-10.0-ARM64-msvc2022-Debug/SCTest.exe",
            "preLaunchTask": "Build SCTest Debug ARM64",
            "args": [],
            "stopAtEntry": false,
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "SCTest [posix] (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/_Build/Output/Posix-Any-Any-Makefile-Debug/SCTest",
            "args": [],
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "Build SCTest Debug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            // Install CodeLLDB extension or similar to use this one
            "name": "SCTest [posix] (lldb)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/_Build/Output/Posix-Any-Any-Makefile-Debug/SCTest",
            "args": [],
            "preLaunchTask": "Build SCTest Debug",
            "console": "integratedTerminal",
            "preRunCommands": [
                "command source ${workspaceRoot}/Support/DebugVisualizers/LLDB/.lldbinit"
            ],
        },
    ]
}